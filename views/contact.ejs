<%- include('header1') %> 


<div class="allPage">
<section id="movie">
    <div class="contact-form">
        <form action="/contact" method="POST" class="ctForm">
            <h2>Get in Touch</h2>
        <p>Please fill out the fields below and i will be in touch with you Lightning fast!</p>
            <div class="form-group">
                <label for="exampleFormControlInput1">Name</label>
                <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="John Doe">
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput1">Email</label>
                <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Subject</label>
                <select class="form-control" name="subject" id="exampleFormControlSelect1">
                    <option>Select...</option>
                  <option>Functionality</option>
                  <option>Copyright issues</option>
                  <option>Bugs</option>
                  <option>Other</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Message</label>
                <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
              <button class="btn btn-info btn-lg">Submit</button>
        </form>
    </div>
</section>
</div>

